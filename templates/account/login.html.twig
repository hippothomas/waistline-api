{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light py-3 mt-5 px-3">
                <h1>Sign in</h1>

                {% if hasError %}
                    <div class="alert alert-danger">An error has occurred: the username or password is incorrect!</div>
                {% endif %}

                <form action="{{ path('account_login') }}" method="POST">
                    <div class="form-group mt-3">
                        <label for="username">Username</label>
                        <input type="text" name="_username" id="username" class="form-control" placeholder="Username" value="{{username}}" required />
                    </div>
                    <div class="form-group mt-3">
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required />
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
